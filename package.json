{
  "name": "realtime-map",
  "type": "module",
  "version": "0.0.1-0.1",
  "private": true,
  "description": "A public map where users can leave anonymous or signed messages that are displayed in real time. All events are associated with coordinates and are visible to other users on the map.",
  "productName": "RealTime Map",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "--------------------------------------------------------------------------------": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "---------------------------------------------------------------------------------": "",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "axios": "^1.12.2",
    "lint-staged": "^16.2.1",
    "pinia": "^3.0.3",
    "socket.io-client": "^4.8.1",
    "unplugin-vue-components": "^29.1.0",
    "vue": "^3.5.18",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.5.1",
    "vue-yandex-maps": "^2.2.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@unocss/eslint-plugin": "^66.5.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "naive-ui": "^2.43.1",
    "npm-run-all2": "^8.0.4",
    "sass-embedded": "^1.93.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "~5.8.0",
    "unplugin-auto-import": "^20.2.0",
    "vfonts": "^0.0.3",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vue-tsc": "^3.0.4"
  },
  "simple-git-hooks": {
    "pre-commit": "bun x lint-staged && bun run typecheck",
    "post-commit": "git status",
    "pre-push": "bun x lint-staged && bun run typecheck",
    "post-merge": "bun i"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
